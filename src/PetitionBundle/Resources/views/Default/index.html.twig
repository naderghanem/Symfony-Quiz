                <!--</div>
                <!-- END SIDEBAR BUTTONS -->
                <!-- SIDEBAR MENU -->
                <div class="profile-usermenu">
                    <ul class="nav" data-tabs="tabs">
                        <li class="">
                            <a href="{{ url('Petition') }}">
                                Toutes nos pétitions
                            </a>
                        </li>

                        {% for theme in themes %}
                            <li class="">
                                <a href="{{ url('Petition_theme' ,{theme: theme.id}) }}">
                                    {{ theme.theme }}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <!-- END MENU -->
            </div>
        </div>

            <div class="col-md-8" style="display: table; top: -100px">
                {% if petition|length == 0 %}
                    <p> Soyez le premier à créer une pétition sur ce sujet</p>
                    {% endif %}
                {% for p in petition %}
                <div class="col-md-6 col-sm-12 col-xs-12 col-lg-6">
                    <div class="card card-nav-tabs" style="display: table-cell;top: -46px">
                        <div class="content">
                            <div class="tab-content text-center">
                                <div class="tab-pane active" id="profile" >
                                    <div class="row">
                                          <div class="">{{ p.Cree }}</div>
                                    </div>
                                    <div class="row">
                                           <div class="col-md-12 col-sm-3" id="team-avatar"><img style="width: 500px; height: 250px" class="img-responsive" src="{{ asset('uploads/brochures/' ~ p.img) }}"></div>
                                           <div id="box_p" class="col-md-12 col-sm-9 col-xs-12" style="left: 10px ; ">
                                               <div> <a href="{{ url('info_petition', {id: p.id}) }}" style=" text-decoration: none; color: #00acc1;" ><h4 style="">{{ p.Nom }}</h4></a></div>
                                               <br>
                                               <div align="left"  style="left: 20px">{{ (p.description|striptags|slice(0, 200) ~ '...')|raw}} <a href="{{ url('info_petition', {id: p.id}) }}">Lire la suite</a></div>
                                               <div ></div>

                                           </div></div>
                                    <div class="row">
                                        <div class="right" style="padding: 10px">
                                            <a href="{{ url('info_petition', {id: p.id}) }}" class="btnn" >signez cette petition<span class="arrow"><i class="glyphicon glyphicon-pencil"></i> </span></a></div>
                                    </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>


                {% endfor %}

    </div>
