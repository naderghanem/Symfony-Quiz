                                                Notifications
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <!-- END MENU -->
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="profile-content">
                            <div class="card">
                                <div class="card-header card-header-warning">
                                    <h4 class="card-title">Liste des petitions</h4>
                                   <div class="col-md-offset-10"><p class="card-category"><a href="{{ path('petition_new') }}">Créer une nouvelle petition</a></p></div>
                                </div>
                                <div class="card-body table-responsive">
                                    <table class="table table-hover">
                                        <thead class="text-warning">
                                        <tr><th>Id</th>
                                            <th>Nom</th>
                                            <th>Cree</th>
                                            <th>N_p</th>
                                            <th>created by</th>
                                            <th>Img</th>
                                            <th>Actions</th>
                                        </tr></thead>
                                        <tbody>
                                        <tr>{% for petition in petitions %}
                                        <tr>
                                            <td><a href="{{ path('petition_show', { 'id': petition.id }) }}">{{ petition.id }}</a></td>
                                            <td>{{ (petition.nom|striptags|slice(0, 200) ~ '...') }}</td>
                                            <td>{{ petition.cree }}</td>
                                            <td>{{ (petition.np|striptags|slice(0, 200) ~ '...') }}</td>
                                            <td>{{ petition.user}} </td>
                                            <td>{% if petition.img %}Yes{% else %}No{% endif %}</td>
                                            <td>
                                                        <a class="btn btn-success btn-link btn-sm" href="{{ path('petition_show', { 'id': petition.id }) }}"><i class="glyphicon glyphicon-eye-open"></i></a>

                                                        <a class="btn btn-danger btn-link btn-sm" href="{{ path('petition_edit', { 'id': petition.id }) }}"><i class="glyphicon glyphicon-pencil"></i></a>

                                            </td>
                                        </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>


                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>

